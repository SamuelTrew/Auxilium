{
  "manifest_version": 2,
  "name": "Auxilium",
  "description": "A toolkit that enables people to use the internet, better.",
  "version": "1.0",
  "background": {
    "persistent": false,
    "scripts": [
      "colorFilter.js",
      "refresh.js",
      "background.js"
    ]
  },
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery.min.js",
        "colorFilter.js",
        "popup.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}